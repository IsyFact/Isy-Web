<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>IsyFact Web</name>
    <groupId>de.bund.bva.isyfact</groupId>
    <artifactId>isy-web</artifactId>
    <packaging>jar</packaging>
    <version>4.3.2-SNAPSHOT</version>
    <description>IsyFact Web</description>

    <parent>
        <groupId>de.bund.bva.isyfact</groupId>
        <artifactId>isyfact-masterpom-lib</artifactId>
        <version>1.4.0</version>
    </parent>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>de.bund.bva.isyfact</groupId>
                <artifactId>isyfact-base-bom</artifactId>
                <version>1.4.1</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>commons-io</groupId>
                <artifactId>commons-io</artifactId>
                <version>2.4</version>
            </dependency>
            <dependency>
                <groupId>commons-fileupload</groupId>
                <artifactId>commons-fileupload</artifactId>
                <version>1.3.1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>

            <!-- Die plis-style wird als Abhängigkeit definiert und in /target/plis-style kopiert. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-scripts</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/isy-style</outputDirectory>
                            <stripVersion>true</stripVersion>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>de.bund.bva.isyfact</groupId>
                                    <artifactId>isy-style</artifactId>
                                    <version>2.2.0</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Die plis-style wird entpackt, ihre Ressourcen werden an die entsprechenden Zielstellen kopiert.
                Grunt darf erst nach diesem Schritt ausgeführt werden. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>prepare</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <unzip dest="target/isy-style">
                                    <fileset dir="target">
                                        <include name="isy-style/isy-style*.zip"/>
                                    </fileset>
                                </unzip>
                                <!-- CSS -->
                                <copy todir="src/main/resources/META-INF/resources/css">
                                    <fileset dir="target/isy-style/css">
                                        <include name="styles-jsf.css"/>
                                        <include name="print-jsf.css"/>
                                        <include name="ie8fixes.css"/>
                                    </fileset>
                                </copy>
                                <move file="src\main\resources\META-INF\resources\css\styles-jsf.css"
                                    tofile="src\main\resources\META-INF\resources\css\styles.css"/>
                                <move file="src\main\resources\META-INF\resources\css\print-jsf.css"
                                    tofile="src\main\resources\META-INF\resources\css\print.css"/>
                                <!-- Fonts -->
                                <copy todir="src/main/resources/META-INF/resources/css/fonts">
                                    <fileset dir="target/isy-style/css/fonts"/>
                                </copy>
                                <!-- IMG -->
                                <copy todir="src/main/resources/META-INF/resources/img">
                                    <fileset dir="target/isy-style/img"/>
                                </copy>
                                <!-- Lib -->
                                <copy todir="src/main/resources/META-INF/resources/lib">
                                    <fileset dir="target/isy-style/lib"/>
                                </copy>
                                <!-- IMG -->
                                <copy todir="src/main/resources/META-INF/resources/plugins">
                                    <fileset dir="target/isy-style/plugins"/>
                                </copy>
                                <!-- Clean target-grunt folder -->
                                <delete dir="target-grunt"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- Das Grunt Plugin führt grunt aus und modifiziert die JS Dateien für das Deployment -->
            <plugin>
                <groupId>pl.allegro</groupId>
                <artifactId>grunt-maven-plugin</artifactId>
                <version>1.5.1</version>
                <configuration>
                    <sourceDirectory>${project.basedir}</sourceDirectory>
                    <jsSourceDirectory>./</jsSourceDirectory>
                </configuration>
                <executions>
                    <!-- Da man von Maven aus nur ein grunt target konfigurieren kann, wird grunt zweimal aufgerufen
                        (für generate-sources und process-resources). Dies hat keine Auswirkung auf die Semantik. -->
                    <execution>
                        <id>generateStyle</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>create-resources</goal>
                            <goal>npm</goal>
                            <goal>grunt</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>uglifyJs</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>grunt</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence
                    on the Maven build itself. -->
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.apache.maven.plugins</groupId>
                                        <artifactId>maven-dependency-plugin</artifactId>
                                        <versionRange>[2.8,)</versionRange>
                                        <goals>
                                            <goal>copy</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>pl.allegro</groupId>
                                        <artifactId>grunt-maven-plugin</artifactId>
                                        <versionRange>[1.5.1,)</versionRange>
                                        <goals>
                                            <goal>npm</goal>
                                            <goal>grunt</goal>
                                            <goal>create-resources</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>

        <!-- ISY -->
        <dependency>
